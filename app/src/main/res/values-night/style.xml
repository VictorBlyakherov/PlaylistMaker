<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="title">
        <item name="android:textSize">22sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="mainButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_marginLeft">@dimen/sixteenDP</item>
        <item name="android:layout_marginRight">@dimen/sixteenDP</item>
        <item name="android:layout_weight">1</item>
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textStyle">normal</item>
        <item name="android:fontFamily">@font/ys_font</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/twentyTwoSP</item>
        <item name="cornerRadius">@dimen/sixteenDP</item>
        <item name="iconGravity">textStart</item>
        <item name="iconPadding">@dimen/tenDP</item>
        <item name="iconTint">@color/white</item>
    </style>

    <style name="settingMenuElement">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:layout_marginLeft">@dimen/sixteenDP</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/sixteenSP</item>
        <item name="android:textStyle">normal</item>
        <item name="android:fontFamily">@font/ys_font</item>
        <item name="android:textFontWeight">400</item>
    </style>

    <style name="settingsButton" parent="android:Widget.Material.Button.Borderless">
        <item name="android:layout_width">@dimen/fortyEightDP</item>
        <item name="android:layout_height">@dimen/fortyEightDP</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:insetLeft">0dp</item>
        <item name="android:insetRight">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="iconGravity">end</item>
        <item name="android:textFontWeight">400</item>
        <item name="iconTint">@color/white</item>
    </style>

    <style name="mainBackground">
        <item name="android:background">@color/black</item>
    </style>

    <style name="settingsBackground">
        <item name="android:background">@color/black</item>
    </style>

    <style name="dayNightTextColor">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="backButton">
        <item name="android:tint">@color/white</item>
    </style>

    <style name="searchEditText">
        <item name="android:textColorHint">#1A1B22</item>
        <item name="android:background">@drawable/rounded_edit_text_night</item>
        <item name="android:drawableLeft">@drawable/search_icon_black</item>

    </style>
</resources>