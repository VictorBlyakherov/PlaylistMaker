<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="title">
        <item name="android:textSize">22sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="mainButton">
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textStyle">normal</item>
        <item name="android:fontFamily">@font/ys_font</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/twentyTwoSP</item>
        <item name="cornerRadius">@dimen/sixteenDP</item>
        <item name="iconGravity">textStart</item>
        <item name="iconPadding">@dimen/tenDP</item>
        <item name="iconTint">@color/white</item>
    </style>

    <style name="settingMenuElement">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:layout_marginLeft">@dimen/sixteenDP</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/sixteenSP</item>
        <item name="android:textStyle">normal</item>
        <item name="android:fontFamily">@font/ys_font</item>
        <item name="android:textFontWeight">400</item>
    </style>

    <style name="settingsButton" parent="android:Widget.Material.Button.Borderless">
        <item name="android:layout_width">@dimen/fortyEightDP</item>
        <item name="android:layout_height">@dimen/fortyEightDP</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:insetLeft">0dp</item>
        <item name="android:insetRight">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="iconGravity">end</item>
        <item name="android:textFontWeight">400</item>
        <item name="iconTint">@color/white</item>
    </style>

    <style name="mainBackground">
        <item name="android:background">@color/black</item>
    </style>

    <style name="settingsBackground">
        <item name="android:background">@color/black</item>
        <item name="tabTextColor">@color/white</item>
        <item name="tabIndicatorColor">@color/white</item>
    </style>



    <style name="dayNightTextColor">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="backButton">
        <item name="android:tint">@color/white</item>
        <item name="android:background">#121212</item>
    </style>

    <style name="searchEditText">
        <item name="android:textColorHint">@color/black_hint</item>
        <item name="android:drawableLeft">@drawable/search_icon_black</item>

    </style>

    <style name="searchContainer">
        <item name="android:background">@drawable/rounded_edit_text_night</item>
    </style>

    <style name="searchResultMain">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="searchResultOther">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="searchArrow">
        <item name="android:tint">@color/white</item>
    </style>


    <style name="clearIcon">
        <item name="android:tint">@color/black</item>
    </style>

    <style name="refreshButton">
        <item name="backgroundTint">@color/white</item>
        <item name="android:textColor">@color/black</item>

    </style>

    <style name="trackDetailMain">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="trackDetailButtonPlay">
        <item name="android:background">#121212</item>
        <item name="android:tint">@color/white</item>
    </style>

    <style name="trackDetailButtonGray">
        <item name="android:tint">@color/white</item>
        <item name="android:background">#121212</item>
    </style>

    <style name="trackDetailFavoritesButton">
        <item name="android:background">#121212</item>
    </style>

    <style name="dayNightNav" parent="Theme.MaterialComponents">
        <item name="android:fontFamily">@font/ys_font</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@color/black</item>
        <item name="itemIconTint">@drawable/search_nav</item>
        <item name="itemTextColor">@drawable/search_nav</item>
    </style>

    <style name="switchTheme">
        <item name="android:thumbTint">@color/switch_thumb_dark</item>
        <item name="android:trackTint">@color/switch_track_dark</item>
    </style>

    <style name="playlistEditText">
        <item name="android:textColorHint">#FFFFFF</item>
        <item name="android:textColor">#FFFFFF</item>

    </style>

    <style name="FloatingHintStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:textSize">12sp</item>
        <item name="fontFamily">@font/ys_font</item>
        <item name="fontWeight">400</item>
        <item name="colorControlNormal">#FFFFFF</item>

        <item name="boxStrokeColor">#3772E7</item>
        <item name="android:letterSpacing">0.03</item>
        <item name="boxCornerRadiusBottomEnd">4dp</item>
        <item name="boxCornerRadiusBottomStart">4dp</item>
        <item name="boxCornerRadiusTopEnd">4dp</item>
        <item name="boxCornerRadiusTopStart">4dp</item>
        <item name="android:textColorHint">#FFFFFF</item>
    </style>

</resources>