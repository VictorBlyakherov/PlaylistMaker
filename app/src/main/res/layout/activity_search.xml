<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    style="@style/settingsBackground"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageButton
            style="@style/backButton"
            android:id="@+id/backSearch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingStart="20dp"
            android:paddingTop="20dp"
            android:paddingEnd="28dp"
            android:paddingBottom="44dp"
            android:src="@drawable/back_svg"
            android:contentDescription="@string/back"
            android:layout_gravity="center_vertical"
            android:backgroundTint="?attr/colorOnPrimary"
            />

        <TextView
            style="@style/dayNightTextColor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="20dp"
            android:paddingBottom="44dp"
            android:layout_gravity="start"
            android:gravity="center_vertical"
            android:text="@string/search"
            android:textSize="22sp"
            android:textStyle="normal"
            android:fontFamily="@font/ys_font"
            android:textFontWeight="500"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/sixtyOneDP"
        android:orientation="horizontal"
        android:layout_marginLeft="@dimen/sixteenDP"
        android:paddingEnd="18dp">

        <EditText
            android:id="@+id/searchEditText"
            style="@style/searchEditText"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:inputType="text"
            android:hint="@string/search"
            android:drawablePadding="@dimen/tenDP"
            android:lines="1"
            android:layout_weight="1"
            android:maxLength="30"
            android:paddingLeft="@dimen/sixteenDP"
            />

        <ImageView
            android:id="@+id/clearIcon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:src="@android:drawable/ic_menu_close_clear_cancel"
            android:visibility="gone"/>
    </LinearLayout>



</LinearLayout>