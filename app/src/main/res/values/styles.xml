<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="title">
        <item name="android:textSize">22sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="mainButton" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textStyle">normal</item>
        <item name="android:fontFamily">@font/ys_font</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/twentyTwoSP</item>
        <item name="cornerRadius">@dimen/sixteenDP</item>
        <item name="iconGravity">textStart</item>
        <item name="iconPadding">@dimen/tenDP</item>
        <item name="iconTint">@color/black</item>
    </style>

    <style name="settingMenuElement">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/sixteenSP</item>
        <item name="android:textStyle">normal</item>
        <item name="android:fontFamily">@font/ys_font</item>
        <item name="android:textFontWeight">400</item>
    </style>

    <style name="settingsButton" parent="android:Widget.Material.Button.Borderless">
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:textFontWeight">400</item>
        <item name="iconTint">@color/gray</item>
    </style>

    <style name="mainBackground">
        <item name="android:background">@color/blue_background</item>
    </style>

    <style name="settingsBackground">
        <item name="android:background">@color/white</item>
        <item name="tabTextColor">@color/black</item>
        <item name="tabIndicatorColor">@color/black</item>
    </style>

    <style name="dayNightTextColor">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="backButton">
        <item name="android:tint">@color/black</item>
        <item name="android:background">@color/white</item>
    </style>

    <style name="searchEditText">
        <item name="android:textColorHint">@color/light_gray</item>

        <item name="android:drawableLeft">@drawable/search_icon_gray</item>

    </style>

    <style name="searchContainer">
        <item name="android:background">@drawable/rounded_edit_text</item>
    </style>

    <style name="searchResultMain">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="searchResultOther">
        <item name="android:textColor">@color/gray</item>
    </style>

    <style name="searchArrow">
        <item name="android:tint">@color/gray</item>
    </style>


    <style name="clearIcon">
        <item name="android:tint">@color/gray</item>
    </style>

    <style name="refreshButton">
        <item name="backgroundTint">@color/black</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="trackDetailMain">
        <item name="android:textColor">@color/_1a1b22</item>
    </style>

    <style name="trackDetailButtonPlay">
        <item name="android:tint">@color/_1a1b22</item>
        <item name="android:background">@color/white</item>
    </style>

    <style name="trackDetailButtonGray">
        <item name="android:background">@color/white</item>
    </style>

    <style name="dayNightNav">
        <item name="android:fontFamily">@font/ys_font</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:background">@color/white</item>
        <item name="itemIconTint">@drawable/search_nav</item>
        <item name="itemTextColor">@drawable/search_nav</item>
    </style>

</resources>