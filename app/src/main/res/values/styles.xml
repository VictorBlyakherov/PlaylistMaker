<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="title">
        <item name="android:textSize">22sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="mainButton" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textStyle">normal</item>
        <item name="android:fontFamily">@font/ys_font</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/twentyTwoSP</item>
        <item name="cornerRadius">@dimen/sixteenDP</item>
        <item name="iconGravity">textStart</item>
        <item name="iconPadding">@dimen/tenDP</item>
        <item name="iconTint">@color/black</item>
    </style>

    <style name="settingMenuElement">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/sixteenSP</item>
        <item name="android:textStyle">normal</item>
        <item name="android:fontFamily">@font/ys_font</item>
        <item name="android:textFontWeight">400</item>
    </style>

    <style name="settingsButton" parent="android:Widget.Material.Button.Borderless">
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:textFontWeight">400</item>
        <item name="iconTint">@color/gray</item>
    </style>

    <style name="mainBackground">
        <item name="android:background">@color/blue_background</item>
    </style>

    <style name="settingsBackground">
        <item name="android:background">@color/white</item>
        <item name="tabTextColor">@color/black</item>
        <item name="tabIndicatorColor">@color/black</item>
    </style>

    <style name="dayNightTextColor">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="backButton">
        <item name="android:tint">@color/black</item>
        <item name="android:background">@color/white</item>
    </style>

    <style name="searchEditText">
        <item name="android:textColorHint">@color/light_gray</item>

        <item name="android:drawableLeft">@drawable/search_icon_gray</item>

    </style>

    <style name="searchContainer">
        <item name="android:background">@drawable/rounded_edit_text</item>
    </style>

    <style name="searchResultMain">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="searchResultOther">
        <item name="android:textColor">@color/gray</item>
    </style>

    <style name="searchArrow">
        <item name="android:tint">@color/gray</item>
    </style>


    <style name="clearIcon">
        <item name="android:tint">@color/gray</item>
    </style>

    <style name="refreshButton">
        <item name="backgroundTint">@color/black</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="trackDetailMain">
        <item name="android:textColor">@color/_1a1b22</item>
    </style>

    <style name="trackDetailButtonPlay">
        <item name="android:tint">@color/_1a1b22</item>
        <item name="android:background">@color/white</item>
    </style>

    <style name="trackDetailButtonGray">
        <item name="android:background">@color/white</item>
    </style>

    <style name="trackDetailFavoritesButton">
        <item name="android:background">@color/white</item>
    </style>


    <style name="dayNightNav">
        <item name="android:fontFamily">@font/ys_font</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:background">@color/white</item>
        <item name="itemIconTint">@drawable/search_nav</item>
        <item name="itemTextColor">@drawable/search_nav</item>
    </style>

    <style name="switchTheme">
        <item name="android:thumbTint">@color/switch_thumb</item>
        <item name="android:trackTint">@color/switch_track</item>
    </style>

    <style name="playlistEditText">
        <item name="android:textColorHint">#1A1B22</item>
        <item name="android:textColor">#1A1B22</item>

    </style>

    <style name="TextInputLayoutStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">
        <item name="boxStrokeColor">#3772E7</item>
    </style>

    <style name="FloatingHintStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:textSize">12sp</item>
        <item name="fontFamily">@font/ys_font</item>
        <item name="fontWeight">400</item>
        <item name="boxStrokeColor">#3772E7</item>
        <item name="android:letterSpacing">0.03</item>

        <item name="boxCornerRadiusBottomEnd">4dp</item>
        <item name="boxCornerRadiusBottomStart">4dp</item>
        <item name="boxCornerRadiusTopEnd">4dp</item>
        <item name="boxCornerRadiusTopStart">4dp</item>
        <item name="android:textColorHint">#1A1B22</item>
    </style>

    <style name="TextInputEditTextStyle">
        <item name="android:textSize">16sp</item>
        <item name="fontFamily">@font/ys_font</item>
        <item name="android:singleLine">true</item>
        <item name="android:maxLines">1</item>
        <item name="android:imeOptions">actionDone|flagNoExtractUi</item>
    </style>

</resources>